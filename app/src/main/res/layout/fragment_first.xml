<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        style="@style/TitleBarRelative">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/linearTitleContainer"
            android:layout_width="300px"
            android:layout_height="60px"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:background="@mipmap/fragment_contact_title_bg">
            <TextView
                android:id="@+id/textChart"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="30px"
                android:textColor="@color/text_color_white_blue_selector"
                android:text="@string/fragment_first_chat_list"/>
            <TextView
                android:id="@+id/textContact"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="30px"
                android:enabled="false"
                android:textColor="@color/text_color_white_blue_selector"
                android:text="@string/fragment_first_contact"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <ImageView
            android:id="@+id/imageRight"
            android:padding="30px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/fragment_first_add"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/frameContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</com.zhy.autolayout.AutoLinearLayout>