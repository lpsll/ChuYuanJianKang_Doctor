    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTel"
            style="@style/EditInput"
            android:layout_marginTop="30px"
            android:hint="@string/fragment_second_tel_hint"
            android:inputType="number"/>

        <TextView
            android:id="@+id/textButtonSendVerification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTel"
            android:layout_alignRight="@+id/editTel"
            android:layout_alignTop="@+id/editTel"
            android:background="@mipmap/button_get_verification_bg"
            android:gravity="center"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:text="@string/fragment_second_send_sms"
            android:textColor="@android:color/white"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:layout_marginTop="60px"
        style="@style/TextButton"
        android:text="@string/fragment_second_generate_bind_number"/>
    <TextView
        android:id="@+id/textTips"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10px"
        android:paddingBottom="10px"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐码已生成"
        android:textSize="26px"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:background="@drawable/black_rectangle_shape"/>

