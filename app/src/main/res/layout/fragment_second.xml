<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        style="@style/TitleBarRelative">

        <TextView
            android:id="@+id/textTitle"
            style="@style/TitleBarRelativeMiddleText"
            android:text="@string/fragment_second"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <!--科室-->
    <TextView
        android:id="@+id/textDepartment"
        style="@style/EditInput"
        android:layout_marginTop="60px"
        android:text="未知科室"
        />
    <!--疾病-->
    <com.zhy.autolayout.AutoLinearLayout
        style="@style/LinearLayoutWithText"
        android:layout_marginTop="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_second_illness"
            android:textColor="@color/text_black"
            android:textSize="26px"
            />

        <TextView
            android:id="@+id/textIllness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:textColor="@color/text_black"
            android:textSize="26px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <!--推荐码-->
    <com.zhy.autolayout.AutoLinearLayout
        style="@style/LinearLayoutWithText"
        android:layout_marginTop="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_second_bind_number"
            android:textColor="@color/text_black"
            android:textSize="26px"
            />

        <TextView
            android:id="@+id/textBindNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:textColor="@color/text_black"
            android:textSize="26px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
