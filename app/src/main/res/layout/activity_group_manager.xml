<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_gray">

    <com.zhy.autolayout.AutoRelativeLayout
        style="@style/TitleBarRelative">
        <ImageView
            style="@style/TitleBarRelativeLeftImage"/>
        <TextView
            style="@style/TitleBarRelativeMiddleText"
            android:text="@string/activity_group_manager"/>
        <ImageView
            android:id="@+id/imageRight"
            android:padding="30px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@mipmap/activity_group_manager_add"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/scrollView"
        style="@style/ScrollView"
        >
        <com.zhy.autolayout.AutoLinearLayout
            style="@style/ScrollViewRoot">
            <!--********************************-->
            <com.htlc.cykf.app.widget.ScrollListView
                android:id="@+id/listView"
                style="@style/ListView"/>
            <!--********************************-->
        </com.zhy.autolayout.AutoLinearLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</com.zhy.autolayout.AutoLinearLayout>