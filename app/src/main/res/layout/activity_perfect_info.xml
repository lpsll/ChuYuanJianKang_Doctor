<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        style="@style/TitleBarRelative">

        <ImageView
            android:id="@+id/imageBack"
            style="@style/TitleBarRelativeLeftImage"/>

        <TextView
            style="@style/TitleBarRelativeMiddleText"
            android:text="@string/activity_perfect_info"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        style="@style/ScrollView"
        >

        <com.zhy.autolayout.AutoLinearLayout
            style="@style/ScrollViewRoot">
            <!--********************************-->
            <com.htlc.cykf.app.widget.CircleImageView
                android:id="@+id/imageHead"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50px"
                android:src="@mipmap/activity_perfect_info_head"/>
            <!--姓名-->
            <EditText
                android:id="@+id/editName"
                style="@style/EditInput"
                android:layout_marginTop="50px"
                android:hint="@string/activity_perfect_name_hint"
                />
            <!--手机号-->
            <EditText
                android:id="@+id/editUsername"
                style="@style/EditInput"
                android:layout_marginTop="30px"
                android:enabled="false"
                android:hint="@string/common_username_hint"
                android:inputType="number"/>
            <!--年龄-->
            <EditText
                android:id="@+id/editAge"
                style="@style/EditInput"
                android:layout_marginTop="30px"
                android:hint="@string/activity_perfect_age_hint"
                android:inputType="number"/>
            <!--性别-->
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textHintGender"
                    style="@style/EditInput"
                    android:layout_marginTop="30px"
                    android:hint="@string/activity_perfect_gender_hint"
                    />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textHintGender"
                    android:layout_alignRight="@+id/textHintGender"
                    android:layout_alignTop="@+id/textHintGender"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20px"
                    android:paddingRight="20px">

                    <RadioButton
                        android:id="@+id/radioButton0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:button="@drawable/square_checkbox"
                        android:checked="true"
                        android:gravity="center"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:text="@string/common_male"
                        android:textColor="@color/text_gray_dark"
                        android:textSize="28px"/>

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:button="@drawable/square_checkbox"
                        android:gravity="center"
                        android:paddingLeft="20px"
                        android:paddingRight="20px"
                        android:text="@string/common_female"
                        android:textColor="@color/text_gray_dark"
                        android:textSize="28px"/>
                </RadioGroup>
            </com.zhy.autolayout.AutoRelativeLayout>
            <!--科室-->
            <TextView
                android:id="@+id/textDepartment"
                style="@style/EditInput"
                android:layout_marginTop="30px"
                android:hint="@string/activity_perfect_department_hint"
                android:textColor="@color/text_black"
                />
            <!--医院-->
            <EditText
                android:id="@+id/editHospital"
                style="@style/EditInput"
                android:layout_marginTop="30px"
                android:hint="@string/activity_perfect_hospital_hint"
                />
            <!--擅长领域-->
            <EditText
                android:id="@+id/editSpeciality"
                style="@style/EditInput"
                android:layout_marginTop="30px"
                android:hint="@string/activity_perfect_speciality_hint"
                />
            <!--从事经验-->
            <EditText
                android:id="@+id/editExperience"
                style="@style/EditInput"
                android:layout_marginTop="30px"
                android:hint="@string/activity_perfect_experience_hint"
                />
<!--证书-->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginTop="30px"
                android:background="@drawable/edit_rectangle_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:orientation="vertical"
                android:paddingBottom="23px"
                android:paddingLeft="30px"
                android:paddingRight="30px"
                android:paddingTop="23px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/activity_perfect_credential_hint"
                    android:textColor="@color/text_gray"
                    android:textSize="28px"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30px"
                    android:orientation="horizontal">
                    <!--资格-->
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageCertification"
                            android:layout_width="150px"
                            android:layout_height="145px"
                            android:background="@mipmap/icon_credential"/>

                        <TextView
                            android:layout_marginTop="10px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24px"
                            android:textColor="@color/text_black"
                            android:text="@string/activity_perfect_career_hint"/>
                        <TextView
                            android:layout_marginTop="10px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24px"
                            android:textColor="@color/text_gray"
                            android:text="@string/activity_perfect_required_hint"/>
                    </com.zhy.autolayout.AutoLinearLayout>
                    <!--职称-->
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageLevel"
                            android:layout_width="150px"
                            android:layout_height="145px"
                            android:background="@mipmap/icon_credential"/>

                        <TextView
                            android:layout_marginTop="10px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24px"
                            android:textColor="@color/text_black"
                            android:text="@string/activity_perfect_level_hint"/>
                        <TextView
                            android:layout_marginTop="10px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24px"
                            android:textColor="@color/text_gray"
                            android:text="@string/activity_perfect_optional_hint"/>
                    </com.zhy.autolayout.AutoLinearLayout>
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageHonor"
                            android:layout_width="150px"
                            android:layout_height="145px"
                            android:background="@mipmap/icon_credential"/>

                        <TextView
                            android:layout_marginTop="10px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24px"
                            android:textColor="@color/text_black"
                            android:text="@string/activity_perfect_honor_hint"/>
                        <TextView
                            android:layout_marginTop="10px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24px"
                            android:textColor="@color/text_gray"
                            android:text="@string/activity_perfect_optional_hint"/>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/textButtonFinish"
                style="@style/TextButton"
                android:layout_marginTop="60px"
                android:text="@string/common_finish"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>